APP_NAME=Haven
APP_ENV=production
APP_KEY=base64:EP9b4GPK6ZRtz3oBxwY7xk/X0iwdK3r8hMUPD89g6Oo=
APP_DEBUG=false
APP_URL=https://yourdomain.com

# =====================================================
# SUPABASE CONFIGURATION
# =====================================================
# Get these from: Supabase Dashboard → Settings → API
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_KEY=your_anon_public_key_here
SUPABASE_SERVICE_KEY=your_service_role_key_here
SUPABASE_JWT_SECRET=your_jwt_secret_here

# =====================================================
# SESSION & CACHE
# =====================================================
SESSION_DRIVER=file
SESSION_LIFETIME=120
CACHE_STORE=file
QUEUE_CONNECTION=sync

# =====================================================
# MAIL CONFIGURATION (Gmail SMTP)
# =====================================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password_here
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your_email@gmail.com
MAIL_FROM_NAME="${APP_NAME}"

# =====================================================
# PAYMENT GATEWAYS
# =====================================================
# Stripe
STRIPE_KEY=pk_test_xxxxx
STRIPE_SECRET=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# PayStack
PAYSTACK_PUBLIC_KEY=pk_test_xxxxx
PAYSTACK_SECRET_KEY=sk_test_xxxxx
PAYSTACK_WEBHOOK_SECRET=your_webhook_url

# =====================================================
# LOGGING
# =====================================================
LOG_CHANNEL=stack
LOG_LEVEL=error

# =====================================================
# BROADCASTING (Optional - for real-time features)
# =====================================================
BROADCAST_DRIVER=log

# =====================================================
# NOTES
# =====================================================
# 1. Never commit this file to Git
# 2. Copy to .env and fill in your actual values
# 3. SUPABASE_SERVICE_KEY should never be exposed in frontend
# 4. Use SUPABASE_KEY (anon key) in mobile apps
# 5. Get Supabase credentials from: https://app.supabase.com
